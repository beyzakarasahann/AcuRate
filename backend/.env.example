# ============================================
# AcuRate Backend - Environment Variables
# ============================================
# 
# Kullanım:
# 1. Bu dosyayı .env olarak kopyalayın: cp .env.example .env
# 2. Tüm değerleri kendi ortamınıza göre doldurun
# 3. Hassas bilgileri (şifreler, API key'ler) asla git'e commit etmeyin!
#
# ============================================

# ============================================
# Django Core Settings
# ============================================

# DEBUG Mode
# Development: True
# Production: False (MUTLAKA False olmalı!)
DJANGO_DEBUG=True

# Secret Key
# Production'da mutlaka güvenli bir key kullanın!
# Generate: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# Allowed Hosts (comma-separated)
# Production'da domain adreslerinizi ekleyin
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Database Configuration (PostgreSQL)
# ============================================

POSTGRES_DB=acurate_db
POSTGRES_USER=acurate_user
POSTGRES_PASSWORD=your-database-password-here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============================================
# Email Configuration (SendGrid)
# ============================================

# SendGrid API Key
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Default From Email
# Production'da kurumsal email adresinizi kullanın
DEFAULT_FROM_EMAIL=noreply@acurate.com

# SendGrid SSL Verification (Development only)
# Set to "true" to skip SSL verification in development (NOT RECOMMENDED)
SENDGRID_SKIP_SSL_VERIFY=false

# ============================================
# Security Settings (Production)
# ============================================

# SSL Redirect (Production only)
# Set to "true" in production if using HTTPS
SECURE_SSL_REDIRECT=false

# ============================================
# Caching Configuration
# ============================================

# Cache Backend
# Options: 'local' (development) or 'redis' (production)
CACHE_BACKEND=local

# Redis URL (if CACHE_BACKEND=redis)
REDIS_URL=redis://127.0.0.1:6379/1
